{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "noImplicitAny": false,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2017",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
